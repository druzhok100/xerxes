<?xml version="1.0" encoding="utf-8"?>
<xerxes>
	 
	<configuration>
		
		<!-- maximum number of records to show  -->
		
		<config name="records_per_page">30</config>
		
		<!-- maximum number of records that can be exported -->
		
		<config name="max_records_per_page">1000</config>
		
		<config name="sort_order">recent</config>
		
		<config name="sort_options" xml="true" pass="true">
			<option id="recent" public="date added" internal="" />
			<option id="title" public="title" internal="title" />
			<option id="author" public="author" internal="author" />
			<option id="date" public="newest" internal="date:desc" type="year"/>
			<option id="date-old" public="oldest" internal="date:asc" type="year"/>
		</config>	
		
		<config name="export_options" xml="true" pass="true">
			<option id="email" icon="icon-envelope" public="Email records to yourself" />
			<option id="refworks" icon="icon-share-alt" public="Export to Refworks" />
			<option id="endnoteweb" icon="icon-share-alt" public="Export to Endnote Web" />
			<option id="blackboard" icon="icon-share-alt" public="Export to Blackboard" />
			<option id="endnote" icon="icon-download" public="Download to Endnote, Zotero, etc." />
			<option id="text" icon="icon-download-alt" public="Download to text file" />
		</config>			
		
	</configuration>
	
</xerxes>
