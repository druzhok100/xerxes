<?xml version="1.0" encoding="utf-8"?>
<xerxes>
	 
	<configuration>
		
		<!-- maximum number of records to show  -->
		
		<config name="records_per_page">30</config>
		
		<!-- maximum number of records that can be exported -->
		
		<config name="max_records_per_page">1000</config>
		
		<config name="sort_order">recent</config>
		
		<config name="sort_options" xml="true" pass="true">
			<option id="recent" label="text_results_sort_by_recent" internal="" />
			<option id="title" label="text_results_sort_by_title" internal="title" />
			<option id="author" label="text_results_sort_by_author" internal="author" />
			<option id="date" label="text_results_sort_by_date" internal="date:desc" type="year"/>
			<option id="date-old" label="text_results_sort_by_date_old" internal="date:asc" type="year"/>
		</config>	
		
		<config name="export_options" xml="true" pass="true">
			<option id="email" icon="icon-envelope" label="text_folder_export_options_list_email" />
			<option id="refworks" icon="icon-share-alt" label="text_folder_export_options_list_refworks" />
			<option id="endnoteweb" icon="icon-share-alt" label="text_folder_export_options_list_endnoteweb" />
			<option id="blackboard" icon="icon-share-alt" label="text_folder_export_options_list_blackboard" />
			<option id="endnote" icon="icon-download" label="text_folder_export_options_list_endnote" />
			<option id="text" icon="icon-download-alt" label="text_folder_export_options_list_text" />
		</config>			
		
	</configuration>
	
</xerxes>
