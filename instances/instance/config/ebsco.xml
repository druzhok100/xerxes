<?xml version="1.0" encoding="utf-8"?>
<xerxes>
	<configuration>
	
		<config name="ebsco_databases" xml="true" pass="true" />	
		<config name="ebsco_username"></config>
		<config name="ebsco_password"></config>
				
		<config name="sort_options" xml="true" pass="true">
			<option id="relevance" label="text_results_sort_by_relevance" internal="relevance" />			
			<option id="date" label="text_results_sort_by_date" internal="date" type="year"/>
			<option id="date-old" label="text_results_sort_by_date_old" internal="date2" type="year"/>
		</config>
		
		<config name="basic_search_fields" xml="true" pass="true">
			<field id="keyword" label="text_search_fields_keyword" internal="" />
			<field id="title" label="text_search_fields_title"  internal="TI" />
			<field id="author" label="text_search_fields_author" internal="AU" />
			<field id="subject" label="text_search_fields_subject" internal="SU" />
		</config>
		
		<config name="facet_fields" xml="true" pass="true">
			<facet label="text_facet_field_database" internal="database" />
		</config>
		
	</configuration>
	
</xerxes>
